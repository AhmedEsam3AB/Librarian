<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/book_name"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
        <EditText
            android:id="@+id/enter_name"
            android:textSize="12sp"
            android:inputType="textFilter"
            android:background="@drawable/border"
            android:maxLines="1"
            android:textColor="@color/colorBlack"
            android:padding="12dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/author_name"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
        <EditText
            android:id="@+id/enter_author"
            android:textSize="12sp"
            android:inputType="textCapSentences"
            android:background="@drawable/border"
            android:maxLines="1"
            android:textColor="@color/colorBlack"
            android:padding="12dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_of_pages"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
        <EditText
            android:id="@+id/enter_pages"
            android:textSize="12sp"
            android:inputType="number"
            android:background="@drawable/border"
            android:maxLines="1"
            android:textColor="@color/colorBlack"
            android:padding="12dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/release_date"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
        <EditText
            android:id="@+id/enter_date"
            android:textSize="12sp"
            android:inputType="number"
            android:background="@drawable/border"
            android:maxLines="1"
            android:textColor="@color/colorBlack"
            android:padding="12dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
        <EditText
            android:id="@+id/enter_category"
            android:textSize="12sp"
            android:inputType="textCapSentences"
            android:background="@drawable/border"
            android:maxLines="1"
            android:textColor="@color/colorBlack"
            android:padding="12dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/publisher"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
        <EditText
            android:id="@+id/enter_publisher"
            android:textSize="12sp"
            android:inputType="textCapSentences"
            android:background="@drawable/border"
            android:maxLines="1"
            android:textColor="@color/colorBlack"
            android:padding="12dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
        <EditText
            android:id="@+id/enter_price"
            android:textSize="12sp"
            android:inputType="text"
            android:background="@drawable/border"
            android:maxLines="1"
            android:textColor="@color/colorBlack"
            android:padding="12dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bookshelf"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
        <EditText
            android:id="@+id/enter_shelf"
            android:textSize="12sp"
            android:inputType="number"
            android:background="@drawable/border"
            android:maxLines="1"
            android:textColor="@color/colorBlack"
            android:padding="12dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/overview"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
        <EditText
            android:id="@+id/enter_overview"
            android:textSize="12sp"
            android:inputType="textMultiLine"
            android:background="@drawable/border"
            android:lines="5"
            android:minLines="2"
            android:maxLines="8"
            android:textColor="@color/colorBlack"
            android:padding="12dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>